extends master

block pageContent
  br
  br
  br
  form(action="/resetpassword", method="post")
    if (!validationInfo.invalidLink)
      p Type your new password and click save to be sent to the log in page.
      if (validationInfo.passwordNotValid)
        label(style="color: red; font-weight: bold;", for="email") This is not a valid password
      input(name="password", type="password", placeholder="New Password", required)
      if (validationInfo.passwordsDoNotMatch)
        label(style="color: red; font-weight: bold;", for="email") Passwords did not match
      input(name="confirmPassword", type="password", placeholder="Confirm New Password", required)
      input(type="submit", class="button", value="Save")
    else
      p Invalid URL, please go to our homepage and try again.
