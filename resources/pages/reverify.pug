extends master

block pageContent
		div(class="registerloginsection", style="grid-template-columns: auto 50% auto;")
			div(class="formbox", style="background-color: rgba(0,0,0,0)")
			form(method="post", class="formbox")
				h3 Resend a verification code
				p Enter the email address associated with your account and we will resend you a new verification code.
				div(class="formboxDiv")
					if (messagesInfo.email.includes("existingEmail"))
						label(style="color: red; font-weight: bold;", for="givenName") No account found by that email address
					else if (messagesInfo.email.includes("newEmail"))
						label(style="color: red; font-weight: bold;", for="givenName") Invalid email address
					input(name="email", id="email", type="email", placeholder="Email Address", required)
				input(type="submit", formaction="/reverify", class="button", value="Log in", style="width: 90%; text-align")
				a(href="/verify", class="button") Back to verification screen 
			div(class="formbox", style="background-color: rgba(0,0,0,0)")
